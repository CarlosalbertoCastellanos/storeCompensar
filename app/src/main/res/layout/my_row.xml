<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="16dp"
        tools:ignore="MissingConstraints">

        <!-- You can remove the inner ConstraintLayout and directly add TextViews and ImageButtons -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- TextView for Product ID -->
            <TextView
                android:id="@+id/id_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="1"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/name_product"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- TextView for Product Name -->
            <TextView
                android:id="@+id/name_product"
                android:layout_width="110dp"
                android:layout_height="26dp"
                android:layout_marginStart="32dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/id_product"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- TextView for Price -->
            <TextView
                android:id="@+id/price_product"
                android:layout_width="110dp"
                android:layout_height="23dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="12dp"
                android:text="TextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_product" />

            <!-- Delete Button -->
            <ImageButton
                android:id="@+id/deleteProduct"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="48dp"
                android:background="@android:color/transparent"
                android:contentDescription="delete product"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baseline_delete_24"
                tools:ignore="TouchTargetSizeCheck" />

            <!-- Edit Button -->
            <ImageButton
                android:id="@+id/editProduct"
                android:layout_width="38dp"
                android:layout_height="37dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@android:color/transparent"
                android:contentDescription="edit product"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baseline_edit_24" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
